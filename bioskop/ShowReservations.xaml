<Page x:Class="bioskop.ShowReservations"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:bioskop"
      mc:Ignorable="d" 
      d:DesignHeight="360" d:DesignWidth="665"
      Title="ShowReservations">

    <Grid>
        <DataGrid x:Name="dg" ItemsSource="{Binding}"  IsReadOnly="True" AllowDrop="False" HorizontalAlignment="Left" Height="360" VerticalAlignment="Top" Width="665" SelectionChanged="dg_SelectionChanged" Margin="0,0,-140.2,-1.6"/>
    </Grid>
</Page>
